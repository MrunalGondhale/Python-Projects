
import React, { useEffect , useState } from "react";
import { Accordion, Badge, Button, Table ,Row,Col,Toast} from "react-bootstrap";
import { Link , withRouter} from "react-router-dom";

import { useDispatch, useSelector } from "react-redux";
import { deleteCourseAction, listCourses , publishedCourseAction, PublishedList} from "../../../actions/coursesActions";


function PublishedCourses({ history, search }) {

    const dispatch = useDispatch();

     
  const [show , setShow] = useState('true')
  const [text,setText] = useState('Publish Your Course')
  const [text1,setText1] = useState('UnPublished')
    

  const publishedList= useSelector((state) => state.publishedList);
  const { loading, error, courses} = publishedList;

  const userLogin = useSelector((state) => state.userLogin);
  const { userInfo } = userLogin;

  useEffect(() => {
    dispatch(PublishedList());
    if (!userInfo) {
      history.push("/");
    }
  }, [
    dispatch,
    history,
    userInfo,
  ]);

  const publishedHandler = (id) =>{
    if (window.confirm("Successfully Published")){
      dispatch(publishedCourseAction(id));
      dispatch(PublishedList());

    }
  }
    return (
        <div>
             {courses && 
             courses
             .filter((filteredCourse) =>
             filteredCourse.title.toLowerCase().includes(search.toLowerCase())
           )
           .reverse()
        

        .map((course) => (
          <div>

          <Table striped bordered hover variant="">
          <thead>
            <tr>

              <th>Course_title</th>
              <th>course_content</th>
              <th>course_category</th>
              <th>Action</th>
    
            </tr>
          </thead>
          <tbody>
            <tr key={course._id}>
          
              <td>{course.title}</td>
              <td>{course.content}</td>
              <td>{course.category}</td>
              
                              {/* {show?<span></span>:<span></span>}
                < Button onClick={()=>{publishedHandler(course._id)}}><Button>{text}</Button></Button>  </td> */}

<td>
<Button onClick={() => setShow(true)} 

onClick={()=>{publishedHandler(course._id)}}


>UnPublished</Button>
</td>
                          
              
            </tr>
           
            
          
          </tbody>
        </Table>
        </div>
        ))
           }

            
        </div>
    );
}

export default PublishedCourses






